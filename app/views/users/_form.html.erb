<%= form_for @user, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %> <%= f.submit "Add coder", :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
